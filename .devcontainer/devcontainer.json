{
  "appPort": [
    "8123:8123"
  ],
  "containerEnv": {
    "INTEGRATION_NAME": "alarmdotcom",
    "LIBRARY_GIT_URL": "https://github.com/pyalarmdotcom/pyalarmdotcomajax.git",
    "LIBRARY_NAME": "pyalarmdotcomajax",
    "POST_SET_VERSION_HOOK": "/workspaces/alarmdotcom/.devcontainer/post-set-version-hook.sh",
    "WORKSPACE_DIRECTORY": "/workspaces/alarmdotcom"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "pyalarmdotcom/pyalarmdotcomajax": {
          "permissions": "write-all"
        }
      }
    },
    "features": {
      "github-cli": "latest"
    },
    "file_version": "2023.3.6",
    "image": "ghcr.io/ludeeus/devcontainer/integration:latest",
    "name": "alarmdotcom",
    "postCreateCommand": "chmod +x /${containerEnv:WORKSPACE_DIRECTORY}/.devcontainer/post-create-script.sh && bash /${containerEnv:WORKSPACE_DIRECTORY}/.devcontainer/post-create-script.sh",
    "vscode": {
      "extensions": [
        "ms-python.vscode-pylance",
        "github.vscode-pull-request-github",
        "ryanluker.vscode-coverage-gutters",
        "bungcip.better-toml",
        "donjayamanne.python-extension-pack",
        "marklarah.pre-commit-vscode",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "janisdd.vscode-edit-csv",
        "mechatroner.rainbow-csv",
        "eamodio.gitlens",
        "ms-python.black-formatter",
        "charliermarsh.ruff"
      ],
      "settings": {
        // "[python]": {
        //   "editor.codeActionsOnSave": {
        //     "source.organizeImports": true
        //   }
        // },
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.tabSize": 4,
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "npm.autoDetect": "off",
        "python.analysis.autoSearchPaths": false,
        "python.defaultInterpreterPath": "/usr/local/python/bin/python",
        "python.formatting.blackPath": "/usr/local/python/bin/black",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.ignorePatterns": [
          "tests/**"
        ],
        "python.linting.mypyEnabled": true,
        "python.linting.mypyPath": "/usr/local/python/bin/mypy",
        "python.linting.pycodestylePath": "/usr/local/python/bin/pycodestyle",
        "python.linting.pylintEnabled": true,
        "ruff.path": [
          "/usr/local/python/bin/ruff"
        ],
        "ruff.args": [
          "--config","pyproject.toml"
        ],
        "python.pythonPath": "/usr/local/python/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/bash"
          }
        },
        "typescript.tsc.autoDetect": "off"
      }
    }
  }
}